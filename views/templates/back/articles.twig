                    {% endautoescape %}


                <hr> #}
                <div class="row container">

                    <div class="col-md-6 col-md-offset-1 ">
                        <p>
                        commentaires
                        <span class="badge badge-primary badge-pill">14 </span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p>
                        signalements
                        <span class="badge badge-primary badge-pill">14 </span>
                        </p>
                    </div> 
                    <hr>
                    <div class="col-md-6 col-md-offset-1 ">
                        <a href="/blog/admin/article/{{item.slug}}/edit" class="btn btn-sm btn-success" role="button">éditer</a>
                    </div>
                    <div class="col-md-6">
                        <a href="/blog/admin/article/{{item.slug}}/delete" class="btn btn-sm btn-danger" role="button">supprimer</a>
                    </div>
                </div>
            </div>




        </div> 
    </div> 


        {% endfor %}
        </div>
