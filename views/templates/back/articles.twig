<div class="container-fluid text-right">

    <a href="/blog/admin/articles/ajouter" class="btn btn-lg btn-warning" >ajouter un article</a>
</div>


<div class="row container-fluid padding-left padding-top ">
        
        {% for item in articles %}

        <div class="col-xs-6 ">

            <div class="card" >
                <div class="card-body">
                <a href="/blog/chapitre/{{ item.slug }}">

                    <h5 class="card-title"> {{ item.title }}</h5>

                    <h6 class="card-subtitle mb-2 text-muted">chapitre numero :  {{ item.id_chapitre}}</h6>
                 </a>

                    <p>
                     publié
            {% if item.published > 0 %}
                    <span class="badge badge-primary badge-pill">oui</span>
            {% endif %}

            {% if item.published < 1  %}
                    <span class="badge badge-warning badge-pill">non</span>
            {% endif %} 

                  </p>

                 <hr>
{# 
                <p>Apperçu : </p>
                    {% autoescape %}
